#!/usr/bin/env bash

set -eu

which apt-get >/dev/null 2>&1 && sudo apt-get install myrepos git

git clone https://github.com/steshaw/shelly.git ~/shelly
PATH=~/shelly/bin:${PATH}
~/shelly/bin/ShellyLinkDotFiles

generate-ssh-key
github-add-key
bitbucket-add-key

ln -s ~/shelly/dotfiles/.gitconfig ~ # Mainly for branch.autosetuprebase
MYREPOS_SKIP=1 mr --trust-all --config ~/shelly/dotfiles/.mrconfig checkout

rm ~/shelly/dotfiles/.gitconfig
~/Projects/steshaw/github.com/shelly/bin/ShellyLinkDotFiles
rm -rf ~/.shelly
