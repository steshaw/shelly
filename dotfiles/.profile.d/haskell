#
# Add GHC 7.8.3 to the PATH, via http://ghcformacosx.github.io/ (or Homebrew ghcformacosx)
#

export GHC_DOT_APP=$(firstDirectory ~/Applications/ghc-7.8.3.app /Applications/ghc-7.8.3.app)
if [[ -n $GHC_DOT_APP ]]; then
  prependPaths ~/.cabal/bin "${GHC_DOT_APP}/Contents/bin"
fi

prependPaths ~/Library/Haskell/ghc-7.8.3/lib/happy-1.19.4/bin

# ex: filetype=sh tabstop=20 shiftwidth=2 expandtab
