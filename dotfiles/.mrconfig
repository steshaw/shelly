[DEFAULT]
git_gc = git gc "$@"

[Projects/steshaw/github.com/shelly]
checkout = git clone 'git@github.com:steshaw/shelly.git' 'shelly'

[Projects/steshaw/bitbucket.org/nand2tetris]
checkout = git clone 'git@bitbucket.org:steshaw/nand2tetris' 'nand2tetris'

[Projects/steshaw/bitbucket.org/notes]
checkout = git clone 'git@bitbucket.org:steshaw/notes' 'notes'

[Projects/steshaw/github.com/playground]
checkout = git clone --depth 1 'git@github.com:steshaw/playground.git' 'playground'
skip = [ -n "${MYREPOS_SKIP}" ]

[Projects/steshaw/bitbucket.org/reactive-2015]
checkout = git clone 'git@bitbucket.org:steshaw/reactive-2015' 'reactive-2015'

[Projects/steshaw/github.com/idris]
checkout =
	 git clone 'git@github.com:steshaw/idris' 'idris'
	 cd idris
	 git remote add upstream git@github.com:idris-lang/Idris-dev.git
update = GitSyncUpstream

[Projects/steshaw/github.com/commercialhaskell]
checkout =
  git clone 'git@github.com:steshaw/commercialhaskell.git' 'commercialhaskell'
  cd commercialhaskell
  git remote add upstream git@github.com:commercialhaskell/commercialhaskell.git
update = GitSyncUpstream

[Projects/steshaw/bitbucket.org/docs]
checkout = git clone --depth 1 'git@bitbucket.org:steshaw/docs.git' 'docs'
skip = [ -n "${MYREPOS_SKIP}" ]

[Projects/steshaw/github.com/steshaw.org]
checkout = git clone 'git@github.com:steshaw/steshaw.org' 'steshaw.org'

[Projects/steshaw/github.com/nixpkgs]
checkout =
	 git clone 'git@github.com:steshaw/nixpkgs.git' 'nixpkgs'
	 cd nixpkgs
	 git remote add upstream git@github.com:NixOS/nixpkgs.git
update = GitSyncUpstream

[Projects/steshaw/github.com/oh-my-zsh]
checkout =
	 git clone 'git@github.com:steshaw/oh-my-zsh.git' 'oh-my-zsh'
	 cd oh-my-zsh
	 git remote add upstream git@github.com:robbyrussell/oh-my-zsh.git
update = GitSyncUpstream
