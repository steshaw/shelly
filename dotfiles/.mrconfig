[DEFAULT]
gc = git gc "$@"


#---------------------------------------------------------------------------------------------------
# Projects
#---------------------------------------------------------------------------------------------------

[Projects/steshaw.org]
checkout = git clone git@github.com:steshaw/steshaw.org

[Projects/shelly]
checkout = git clone git@github.com:steshaw/shelly


#---------------------------------------------------------------------------------------------------
# Forks
# ---------------------------------------------------------------------------------------------------

[Projects/idris]
checkout =
  git clone git@github.com:steshaw/idris
  cd idris
  git remote add upstream git@github.com:idris-lang/Idris-dev

[Projects/decktape]
checkout =
  git clone --depth 1 git@github.com:steshaw/decktape
  cd decktape
  git remote add upstream git@github.com:astefanutti/decktape


