[DEFAULT]
gc = git gc "$@"
sync = git sync-upstream-master

# --------------------------------------------------------------------------
# Personal repositories.
# --------------------------------------------------------------------------

[Code/steshaw/shelly]
checkout = git clone git@github.com:steshaw/shelly

[Code/steshaw/steshaw.org]
checkout = git clone --recursive git@github.com:steshaw/steshaw.org

[Code/steshaw/notes]
checkout = git clone git@github.com:steshaw/notes

# --------------------------------------------------------------------------
# Tools
# --------------------------------------------------------------------------

[Code/steshaw/timedot-vim]
checkout = git clone git@github.com:steshaw/timedot-vim.git timedot-vim

[.emacs.d]
checkout = git clone --branch develop https://github.com/syl20bnr/spacemacs .emacs.d

[.oh-my-zsh]
checkout = git clone --depth 1 https://github.com/robbyrussell/oh-my-zsh.git .oh-my-zsh

[.oh-my-zsh/custom/plugins/zsh-completions]
checkout = git clone https://github.com/zsh-users/zsh-completions

[.fzf]
checkout = git clone 'https://github.com/junegunn/fzf.git' '.fzf'

# --------------------------------------------------------------------------
# FLOSS
# --------------------------------------------------------------------------

[Code/NixOS/nix]
checkout = git clone 'git@github.com:NixOS/nix' 'nix'

[Code/idris-lang/Idris2]
checkout =
	  git clone git@github.com:steshaw/Idris2 Idris2
	  cd Idris2
	  git remote add upstream git@github.com:idris-lang/Idris2.git
update = git sync-upstream-master

[Code/NixOS/nix]
checkout =
	  git clone git@github.com:steshaw/nix.git nix
	  cd nix
	  git remote add upstream git@github.com:NixOS/nix.git
update = git sync-upstream-master

[Code/NixOS/nixpkgs]
checkout =
	  git clone git@github.com:steshaw/nixpkgs.git nixpkgs
	  cd nixpkgs
	  git remote add upstream git@github.com:NixOS/nixpkgs.git
update = git sync-upstream-master
