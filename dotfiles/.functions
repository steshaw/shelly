#!/usr/bin/env bash

prependPaths() {
  for path_ in "$@"; do
    if [[ -d ${path_} ]]; then
      echo "Prepending ${path_}"
      PATH=${path_}:${PATH}
    fi
  done
}

sourceExists() {
  for path_ in "$@"; do
    if [[ -e ${path_} ]];then
      echo "Sourcing $path_"
      source "${path_}"
    fi
  done
}

firstDirectory() {
  for dir in "$@"; do
    [[ -d ${dir} ]] && echo "${dir}"
  done
  echo ""
}

homeFromBin() {
  command=$1
  bin=$(which "$command")
  if [ -n "$bin" ]; then
    bin=$(RealPath "$bin")
    dirname "$(dirname "$bin")"
  fi
}
