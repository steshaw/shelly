[user]
  name = Steven Shaw
  email = steven@steshaw.org

[color]
  diff = auto
  status = auto
  branch = auto

[alias]
  s = status --short --branch
  co = checkout
  ls = ls-files
  slog = log --oneline --decorate
  slog1 = log --pretty='%Cred%h %Cblue%ae %Creset%s'
  llog = log --date=local
  graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short
  wdiff = diff --word-diff
  undo = reset --soft HEAD^

[core]
  excludesfile = ~/.gitignore.global
  autocrlf = input

[credential]
  helper = cache --timeout 36000

[push]
  default = simple
;[credential]
;  helper = cache --timeout 36000

[rerere]
  enabled = true

[branch]
  autosetuprebase = always

[diff]
  tool = diffmerge
[difftool "diffmerge"]
  cmd = /usr/bin/diffmerge \"$LOCAL\" \"$REMOTE\"

[merge]
  tool = diffmerge
[mergetool "diffmerge"]
  trustExitCode = true
  cmd = /usr/bin/diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[fetch]
  prune = true
