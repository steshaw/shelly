#
# On Mac, this is required.
#
if [[ -x /usr/libexec/path_helper ]]; then
  eval `/usr/libexec/path_helper -s`
fi

if which vim >/dev/null; then
  export EDITOR=$(which vim)
fi

if which emacsclient >/dev/null; then
  export EDITOR=emacsopen
fi

alias e='${EDITOR}'
export VISUAL=${EDITOR}
# we :: which edit
function we {
  e "$(which $1)"
}

set -o vi

# Aliases

#alias ls='ls --color -Fh'
alias ls='ls -GFh'
alias l='ls -l'
alias ll='l -A'

alias wi='type -ap'

# Make file ops safer.
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

alias cx='chmod +x'
alias cw='chmod +w'

alias vbp='vim ~/.profile'
alias sbp='source ~/.profile'
alias vbrc='vim ~/.bashrc'
alias sbrc='source ~/.bashrc'

alias szshrc="source ~/.zshrc"
alias zshrc="${VISUAL} ~/.zshrc"
alias ohmyzsh="${VISUAL} ~/.oh-my-zsh"

alias path='echo $PATH | tr : "\n"'
alias macpath='defaults read ~/.MacOSX/environment PATH | tr : "\n"'

if [[ "$(uname)" != 'Darwin' ]]; then
  alias pbcopy='xsel --clipboard --input'
  alias pbpaste='xsel --clipboard --output'
fi

alias sml='rlwrap sml'
alias ocaml='rlwrap ocaml'

if [ -x "$(which gnome-open)" ]; then
  alias o='gnome-open'
elif [ -x "$(which xdg-open)" ]; then
  alias o='xdg-open'
else
  alias o='open'
fi

cdpath=(
  .
  ~/Projects/steshaw
  ~/Projects/steshaw/swift-haskell
  ~/Projects/steshaw/bitbucket.org
  ~/Projects/steshaw/github.com
  ~/Projects/steshaw/github.com/gists
)

PATH=bin:$PATH

sourceExists ~/.travis/travis.sh # for travis gem
sourceExists ~/.shrc.local

