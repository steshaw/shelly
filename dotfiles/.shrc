echo Executing ~/.shrc

setEditor() {
  if [[ -z $EDITOR ]]; then
    editor=$1
    echo Trying $editor
    if which $editor >&- 2>&-; then
      export EDITOR="$(which $editor)"
    fi
  fi
}

setEditor nvim
setEditor vim

alias e='emacsclient -n'
export VISUAL=${EDITOR}
# we :: which edit
function we {
  e "$(which $1)"
}

set -o vi

# Aliases

if which nvim >&- 2>&-; then
  alias vim=nvim
fi

#alias ls='ls --color -Fh'
alias ls='ls -GFh'
alias l='ls -l'
alias ll='l -A'

alias wi='type -ap'

# Make file ops safer.
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

alias cx='chmod +x'
alias cw='chmod +w'

alias vbp='vim ~/.profile'
alias sbp='source ~/.profile'
alias vbrc='vim ~/.bashrc'
alias sbrc='source ~/.bashrc'

alias szshrc="source ~/.zshrc"
alias zshrc="${VISUAL} ~/.zshrc"
alias ohmyzsh="${VISUAL} ~/.oh-my-zsh"

alias gaa='git add --all'
alias gst='git status'

alias path='echo $PATH | tr : "\n"'
alias macpath='defaults read ~/.MacOSX/environment PATH | tr : "\n"'

alias haskell='stack'
alias hs='stack'

alias mobile-pdf='k2pdfopt -ui- -h 1280p -w 720p -dpi 294 -fc- -c -bpc 8 -om 0.2s,0,0.2s,0 -x'

if [[ "$(uname)" != 'Darwin' ]]; then
  alias pbcopy='xsel --clipboard --input'
  alias pbpaste='xsel --clipboard --output'
fi

alias sml='rlwrap sml'
alias ocaml='rlwrap ocaml'

if [ -x "$(which gnome-open 2>&-)" ]; then
  alias o='gnome-open'
elif [ -x "$(which xdg-open 2>&-)" ]; then
  alias o='xdg-open'
else
  alias o='open'
fi

cdpath=(
  .
  ~/Projects
  ~/Projects/steshaw
)

sourceExists ~/.travis/travis.sh # for travis gem
sourceExists ~/.shrc.local

# vim: ft=sh
