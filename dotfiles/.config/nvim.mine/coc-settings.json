/* See https://github.com/neoclide/coc.nvim/blob/master/data/schema.json */

/* HT to Andres L√∂h for initial configuration */

{
  "coc.preferences.hoverTarget": "preview", /* preview, echo, float */
  "diagnostic.errorSign": "üõë", /* "‚ñ∂‚ñ∂" */
  "diagnostic.warningSign": "‚ö†Ô∏è ",

  "suggest.autoTrigger": "always", /* always, trigger, none */

  "languageserver": {
    "haskell": {
      "command": "ghcide",
      "args": [ "--lsp" ],
      "rootPatterns": [
        "stack.yaml",
        "hie.yaml",
        "cabal.project",
        "package.yaml",
        "shell.nix"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    },
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    }
  },

  "rust-client.disableRustup": true,
  "rust-client.trace.server": "off", /* off, messages, verbose */
  "rust.clippy_preference": "on",
}
