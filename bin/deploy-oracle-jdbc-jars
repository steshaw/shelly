#!/bin/bash

version=11.2.0.3
thirdPartyRepo="http://adevl66.au.fcl.internal:8081/nexus/content/repositories/thirdparty"

deploy() {
  artifactId=$1
  classifier=$2
  jar=$3
  javadocFile=$4

  if [[ -n $javadocFile ]]; then
    javadoc="-Djavadoc=${javadocFile}"
  fi

  echo mvn --settings '${HOME}/.m2/settings.thirdparty.xml' deploy:deploy-file \
      -DgroupId=com.oracle \
      -DartifactId=${artifactId} \
      -Dclassifier=${classifier} \
      -Dversion=${version} \
      -Dpackaging=jar \
      -Dfile=${jar} \
      ${javadoc} \
      -Durl=${thirdPartyRepo} \
      -DrepositoryId=thirdparty
  echo
}

deploy ojdbc6    ''  ojdbc6.jar      'javadoc.zip'
deploy ojdbc6    'g' ojdbc6_g.jar    'javadoc.zip'
deploy ojdbc6dms ''  ojdbc6dms.jar   'javadoc.zip'
deploy ojdbc6dms 'g' ojdbc6dms_g.jar 'javadoc.zip'
deploy ucp       ''  ucp.jar         'UCPJavadoc.zip'
deploy orai18n   ''  orai18n.jar     ''
deploy simplefan ''  simplefan.jar   ''
deploy xdb6      ''  xdb6.jar        ''
