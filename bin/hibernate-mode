#!/bin/sh

Usage() {
  echo "usage: $(basename $0) ram|disk|smart" >&2
  exit 2
}

[[ $# -ne 1 ]] && Usage

if [[ $1 = "ram" ]]; then
  mode=0
elif [[ $1 = "disk" ]]; then
  mode=1
elif [[ $1 = "smart" ]]; then
  mode=3
else
  Usage
fi

echo "Setting hibernatemode to $1 ($mode)"
sudo pmset -a hibernatemode $mode
