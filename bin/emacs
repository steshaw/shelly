#!/bin/bash -e

sysApplications=/Applications
usrApplications=~/Applications

aquamacsApp=Aquamacs.app/Contents/MacOS/Aquamacs

if [[ -x ${sysApplications}/${aquamacsApp} ]]; then
  exec ${sysApplications}/${aquamacsApp} "$@"
elif [[ -x ${usrApplications}/${aquamacsApp} ]]; then
  exec ${usrApplications}/${aquamacsApp} "$@"
else
  exec /usr/bin/emacs "$@"
fi
