#!/usr/bin/env bash

set -euo pipefail

host=$1

session=dev

#ssh -YCt "$host" tmux $session
#ssh -YC "$host" tmux $session

if true; then
  ssh -CYt "$host" "tmux attach-session -t $session || tmux new-session -s $session"
else
  mosh "$host" -- "tmux attach-session -t $session || tmux new-session -s $session"
fi
