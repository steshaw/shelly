#!/usr/bin/env bash

set -euo pipefail

#
# Basic tools.
#
curl -sL https://deb.nodesource.com/setup_7.x | sudo -E bash -
sudo add-apt-repository -y ppa:git-core/ppa
sudo apt-get -qy update
sudo apt-get -qy install \
  bundler \
  emacs \
  git \
  httpie \
  libsass-dev \
  nodejs \
  pandoc \
  parallel \
  pkg-config \
  libpq-dev \
  postgresql \
  postgresql-client \
  redis-server \
  sudo \
  time \
  tree \
  vim

#
# Yarn
#
install-yarn-ubuntu

#
# Docker.
#
sudo apt-get install -qy \
    apt-transport-https \
    ca-certificates \
    curl \
    software-properties-common
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
sudo add-apt-repository \
   "deb [arch=amd64] https://download.docker.com/linux/ubuntu \
   $(lsb_release -cs) \
   stable"
sudo apt-get update -qy
sudo apt-get install -qy docker-ce

#
# Google Cloud SDK.
#

# Create an environment variable for the correct distribution
export CLOUD_SDK_REPO="cloud-sdk-$(lsb_release -c -s)"

# Add the Cloud SDK distribution URI as a package source
echo "deb http://packages.cloud.google.com/apt $CLOUD_SDK_REPO main" | 
  sudo tee -a /etc/apt/sources.list.d/google-cloud-sdk.list

# Import the Google Cloud Platform public key
curl -fLsS https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo apt-key add -

# Update the package list and install the Cloud SDK
sudo apt-get update -qy
sudo apt-get install -qy google-cloud-sdk kubectl

#
# Haskell.
#
curl -sSL https://get.haskellstack.org/ | sh
stack upgrade

#
# Idris development...
#
pkg install -y libffi-dev zlib1g-dev libncurses5-dev libgmp3-dev pkgconf

install-xpra-ubuntu
install-chrome-ubuntu
