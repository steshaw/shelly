#!/bin/bash

command=$1; shift

uname=$(uname)

if [[ $command = 'info' ]]; then
  if [[ $uname = 'Darwin' ]]; then
    brew info "$@"
  else
    apt-cache show "$@"
  fi
elif [[ $command = 'search' ]]; then
  if [[ $uname = 'Darwin' ]]; then
    brew search "$@"
  else
    apt-cache search "$@"
  fi
elif [[ $command = 'install' ]]; then
  if [[ $uname = 'Darwin' ]]; then
    brew install "$@"
  else
    sudo apt-get install "$@"
  fi
elif [[ $command = 'remove' || $command = "uninstall" ]]; then
  if [[ $uname = 'Darwin' ]]; then
    brew uninstall "$@"
  else
    sudo apt-get autoremove "$@"
  fi
elif [[ $command = 'refresh' || $command = 'update' ]]; then
  if [[ $uname = 'Darwin' ]]; then
    brew update "$@"
  else
    sudo apt-get update "$@"
  fi
elif [[ $command = 'upgrade' ]]; then
  if [[ $uname = 'Darwin' ]]; then
    brew upgrade "$@"
  else
    sudo apt-get upgrade "$@"
  fi
else
  basename=$(basename $0)
  echo "${basename}: '${command}' is an unknown command" >&2
  exit 1
fi
