#!/bin/bash

set -eu
set -o noclobber

if [[ $# -eq 0 ]]; then
  echo "usage: $0 a blog post title" >&2
  exit 2
fi
if [[ ! -d posts ]]; then
  echo "Cannot find posts/. You don't appear to be in the right directory."
  exit 1
fi

title="$@"

timestamp="$(date +%Y-%m-%dT%H:%M:%S%z)"
justDate="$(echo ${timestamp} | cut -c1-10)"

filename="posts/${justDate}-$(echo ${title} | sed 's/ /-/g' | tr 'A-Z'  'a-z')"

cat >${filename} <<!
---
title: ${title}
date: $(timestamp)
tags: 
---
!

vim "${filename}"
