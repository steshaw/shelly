#!/usr/bin/env bash

set -euo pipefail

binDir=$(dirname "$0")
shellyDir=$(dirname "${binDir}")
cd "$shellyDir"

install-brew
echo
create-xterm-24bit
echo
install-haskell-stack
echo
echo 'Installing brews ...'
brew bundle --global
echo
install-python-neovim
echo
echo 'Doing myrepos checkout ...'
# No idea _why_ we need `--directory` here...
mr --directory "$HOME" checkout
