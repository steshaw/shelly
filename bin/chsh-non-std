#!/usr/bin/env bash
#
# Switch login shell back to bash.
#

set -euo pipefail

script=$(basename "$0")
if [[ $# -ne 1 ]]; then
  cat <<! 1>&2
usage: ${script} shell

  shell - e.g. bash or zsh
!
  exit 2
fi

shell=$1

shell=$(command -v "$shell")
if ! grep -Fxq "${shell}" /etc/shells; then
  echo "${shell}" | sudo tee -a /etc/shells
fi
chsh -s "${shell}"
